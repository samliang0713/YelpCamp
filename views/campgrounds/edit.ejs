<% layout('layouts/boilerplate')%>



    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=cg._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=cg.title%>"
                        required>
                    <div class="valid-feedback">Looks good</div>
                </div>

                <div class="input-group mb-3">
                    <label class="form-label" for="title">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>

                        <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=cg.price%>" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="title">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=cg.location%>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%=cg.description%></textarea>
                </div>

                <div class="mb-3">
                    <label for="formFileSm" class="form-label">Add Image(s)...</label>
                    <input type="file" class="form-control form-control-sm" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% cg.images.forEach(function(img, i) { %>
                        <img src='<%=img.thumbnail%>' class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%= i %>">Delete</label>
                        <% }) %>


                </div>
                <div class="mb3">
                    <button class="btn btn-info">Update campground</button>
                </div>
            </form>

            <a href="/campgrounds/<%= cg._id%>">Back to campground</a>
        </div>